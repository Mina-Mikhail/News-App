<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:angle="90"
          android:endColor="#404040"
          android:startColor="#232323" />
      <corners android:radius="7dp" />
    </shape>
  </item>

  <item
      android:bottom="1dp"
      android:left="1dp"
      android:right="1dp"
      android:top="0dp">
    <shape android:shape="rectangle">
      <solid android:color="#c8000000" />
      <corners android:radius="7dp" />
    </shape>
  </item>
</layer-list>